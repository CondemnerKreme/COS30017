<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Detaildata">

    <!-- Bright Orange Top Padding -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFA500" />
    <!-- For piano button/ImageView -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Instrument Name -->
        <TextView
            android:id="@+id/detailName"
            style="@style/InstrumentNameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/instrument_name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Instrument Image -->
        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="#f0f0f0"
            android:contentDescription="@string/instrument_image"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Rating Bar -->
        <RatingBar
            android:id="@+id/detailRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:numStars="5"
            android:rating="4.0"
            android:stepSize="0.5"
            android:isIndicator="true" />

        <!-- Instrument Type -->
        <TextView
            android:id="@+id/detailType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/type"
            android:textSize="18sp" />

        <!-- Price -->
        <TextView
            android:id="@+id/detailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="@string/price"
            android:textSize="18sp" />

        <!-- Availability Status -->
        <TextView
            android:id="@+id/detailAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="@string/available"
            android:textColor="@color/green"
            android:textSize="16sp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <!-- Booking Form Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/booking_details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Name Input -->
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/your_full_name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="12dp"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/etUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/your_email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="12dp"/>

        <!-- Credit Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/your_credit_balance"
                android:textSize="16sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvCreditBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 credits"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text=""
            android:textColor="#F44336"
            android:textSize="14sp"
            android:visibility="gone" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/btnConfirm"
                style="@style/PrimaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="@string/confirm_booking" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>